<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/vpager_main_header"
        android:layout_width="match_parent"
        android:layout_height="125dp">
    </android.support.v4.view.ViewPager>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_search"
        ></include>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/nav_header_index"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <ScrollView
        android:id="@+id/scrollview_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/vpager_main_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview_main_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <View
        android:id="@+id/view01"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#d8dde1"
        android:layout_below="@+id/recycleview_main_menu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"></View>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview_second_menu"
                android:layout_below="@+id/view01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/view02"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#d8dde1"
        android:layout_below="@+id/recycleview_second_menu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"></View>

    <!--旅游热讯-->
    <LinearLayout
        android:id="@+id/main_tra_hot_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/view02"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@mipmap/main_hot_news"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="#000000"
            android:text="秋天真的来了，吃火锅就按这个火锅地图走！"/>
    </LinearLayout>
    <!---特价-->
    <LinearLayout
        android:id="@+id/main_price_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/main_tra_hot_info"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:background="@mipmap/main_spread1"
                android:layout_weight="1.5"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:background="@mipmap/main_spread2"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/main_spread3"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@mipmap/main_spread4"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <!--旅行直播-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/main_price_info"
        android:layout_marginBottom="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:src="@mipmap/main_travle_online"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旅行直播"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/main_travle_online_pic"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现美国好东西"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资深老师解析，互动发红包"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_travle_online_play"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@mipmap/main_travle_online_pic2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPG首次直播"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京长安W酒店，耀动帝都"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@mipmap/main_travle_online_play"
                />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>
